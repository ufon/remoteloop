{
  "name": "@remoteloop/desktop",
  "version": "0.3.1",
  "main": "src/index.js",
  "license": "MIT",
  "copyright": "Copyright © 2021 Anton Postoyalko",
  "author": {
    "name": "Anton Postoyalko",
    "email": "ufon.exe@yandex.ru"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ufon/remoteloop.git"
  },
  "build": {
    "appId": "com.remoteloop",
    "productName": "remoteloop",
    "copyright": "Copyright © 2021 Anton Postoyalko",
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "remoteloop-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "runAfterFinish": true,
      "installerIcon": "assets/icons/icon.ico",
      "artifactName": "remoteloop-${version}.${ext}"
    },
    "portable": {
      "artifactName": "remoteloop.exe"
    },
    "appx": {
      "applicationId": "com.remoteloop",
      "backgroundColor": "#464646",
      "identityName": "com.remoteloop",
      "publisherDisplayName": "Anton Postoyalko",
      "artifactName": "remoteloop-${version}.${ext}"
    },
    "directories": {
      "buildResources": "resources"
    }
  },
  "scripts": {
    "clear": "rm -rf dist",
    "postinstall": "npm run rebuild",
    "start": "nodemon --watch ./src --exec \"electron ./src --inspect\"",
    "rebuild": "electron-rebuild",
    "build": "npm run clear && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/node": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "devtron": "^1.4.0",
    "electron": "13",
    "electron-builder": "^22.14.5",
    "electron-rebuild": "^3.2.5",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "@nut-tree/nut-js": "^1.7.0",
    "@remoteloop/web": "^0.3.1",
    "electron-log": "^4.4.1",
    "express": "^4.17.1",
    "ip": "^1.1.5",
    "keycode": "^2.2.1",
    "qrcode": "^1.5.0",
    "socket.io": "^4.4.0"
  }
}
